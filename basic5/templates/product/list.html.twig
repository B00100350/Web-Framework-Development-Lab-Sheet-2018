{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product LIST Page</h1>

    <ul>
        {% for product in products %}
            <li>
                id = {{ product.id }}
                <br>
                description = {{ product.description }}
                <br>
                <a href="{{ url('product_show',{id : product.id}) }}">(details)</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}