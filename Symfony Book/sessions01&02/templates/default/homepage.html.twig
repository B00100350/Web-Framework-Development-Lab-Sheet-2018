
{% extends 'base.html.twig' %}

{% block body %}
<h1>Home Page</h1>
    <p>

        Welcome to the Home Page

    </p>
    using default colours =
    {% if default_colours %}
        yes
    {% else %}
        no
    {% endif %}
    <ul>
        {% for property, colour in colours %}
            <li>
                {{ property }} = {{ colour }}
            </li>
        {% endfor %}
    </ul>

{% endblock %}